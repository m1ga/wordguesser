<Alloy>
	<Window title="Word guesser">

		<View id="rows">
			<Widget src="letterRow"/>
			<Widget src="letterRow"/>
			<Widget src="letterRow"/>
			<Widget src="letterRow"/>
			<Widget src="letterRow"/>
		</View>

		<View id="view_bottom">
			<View id="view_menu">
				<Button id="btn_new" titleid="newGame" onClick="onClickNew"/>
				<Button id="btn_share" titleid="share" onClick="onClickShare"/>
				<Button id="btn_check" titleid="check" onClick="onClickCheck"/>
				<Button id="btn_back" class="icon" title="\uEC1A" onClick="onClickBack"/>
			</View>
			<View id="view_keyboard"/>
		</View>

		<OptionDialog id="dialog" title="L('restart')" message="L('restart_text')" onClick="onClickDialog">
			<Options>
				<Option>L("yes")</Option>
				<Option cancel="true">L("no")</Option>
			</Options>
			<ButtonNames>
            <ButtonName>L("yes")</ButtonName>
            <ButtonName cancel="true">L("no")</ButtonName>
        </ButtonNames>
		</OptionDialog>
	</Window>
</Alloy>
